<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kyle.randomchoice" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/theme_green" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EnterChoiceActivity"
            android:label="@string/title_activity_enter_choice"
            android:windowSoftInputMode="adjustResize">
        </activity>
        <activity
            android:name=".ViewChoiceActivity"
            android:label="@string/title_activity_view_choice" >
        </activity>
    </application>

</manifest>
